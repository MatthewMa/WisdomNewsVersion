<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_bg_newyear"
    android:id="@+id/rl_root">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/splash_horse_newyear"
        android:id="@+id/iv_horse"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wisdom News"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version:1.0"
        android:textColor="@android:color/holo_purple"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_horse"
        android:text="START"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_start_selector"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_start"
        android:visibility="invisible"
        />
</RelativeLayout>
